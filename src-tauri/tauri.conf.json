{
  "productName": "Spectra",
  "version": "0.1.0",
  "identifier": "com.spectra.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "overlay",
        "title": "Spectra",
        "url": "/",
        "width": 800,
        "height": 600,
        "visible": false,
        "transparent": true,
        "decorations": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "fullscreen": true,
        "resizable": false,
        "focus": true
      },
      {
        "label": "settings",
        "title": "Spectra Settings",
        "url": "/",
        "width": 600,
        "height": 700,
        "visible": false,
        "resizable": false,
        "decorations": true,
        "alwaysOnTop": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.ico"
    ]
  }
}
